rounded($r)
    -webkit-border-radius: $r;
    -moz-border-radius: $r;
    border-radius: $r;

.user
  .icon
    overflow: hidden
    rounded(50%);
    border: 1px solid #ddd;
    background: #fff
    padding: 4px
    float: left
    img
      rounded(50%);
      width: 50px
      height: 50px
.user-icon
  overflow: hidden
  rounded(50%);
  border: 1px solid #ddd;
  background: #fff
  padding: 4px
  float: left
  &.small
    padding: 2px
    img
      width: 30px
      height: 30px
  img
    rounded(50%);
    width: 50px
    height: 50px
.user-icon-name
  float: left
  a
    font-size: 1.4em
    font-weight: 600
    text-decoration: none;
    color: #e23e52
.header-login
  .links
    margin: 13px 5px
    color: #eee

.profile
  .user-icon
    float: right
  .info
    margin: 0px 5px
    text-align: right
.login-form
  width: 350px
  .form
    width: 100%
    float: left