.error
  position:relative
  vertical-align: bottom
  display: none
  float: right
  clear: both
  width: 100%
  z-index: 1
  .text
    -border-radius(5px, 0px, 3px, 0)
    white-space: nowrap
    position: absolute
    right: 0px
    bottom: 5px
    padding: 2px 10px
    background-color: #FF6961
    color: white
    font-size: 0.8em
textarea.editor + .error .text
  -border-radius(5px, 0px, 0px, 0)
  bottom: 38px
textarea
  resize: vertical
  &.autosize
    overflow: hidden;
    resize: none;
.mce-btn button
  height: 28px !important
  padding-top: 0 !important
  padding-bottom: 0 !important
.image-multiloader
  width: 100%
  .item
    text-align: center
    cursor: default
    position: relative
    width: 150px
    height: 100px
    float: left
    overflow: hidden
    border: 1px solid #cccccc
    padding: 5px
    margin: 5px
    background-color: #ffffff
    rounded(5px)
    .source-wrapper
      cursor: pointer
      display: none
      width: 100%
      height:100%
      overflow: hidden
      position: absolute
    .source
      rounded(3px)
      overflow: hidden
      background-size: cover;
      background-repeat: no-repeat
      background-position: center
      width: 100%
      height: 100%
      z-index:1
    &.loading
      .source
        background-image: none !important
      .no-photo
        display: none
      .loading
        display: block
    &.new
      border: 1px dashed #cccccc
      .loading
        display: none
      .no-photo, .source-wrapper
        display: block
    &.invisible > *:not(.buttons)
      opacity: 0.2
    &.invisible .button .visible
      display: block
    .button .invisible
      display: none
    .no-photo, .loading
      display: none
      font-size: 50px
      color: #cccccc
      position: absolute;
      margin: -25px;
      top: 50%;
      left: 50%;
    .loading
      display:  none
    input[type=file]
      cursor: pointer
      position: absolute
      left: -50px
      top: -50px
      font-size: 0px
      width: 150%
      height: 150%
      opacity: 0
      z-index: 2
    .error
      position: absolute
      top: 0px;
      left: -5px;
      width: 100%
    .buttons
      cursor: pointer
      display: none
      position: absolute
      width: 100%
      border-top: 1px solid #eeeeee
      bottom: 0px
      left: 0px
      height: 30px
      color: #666666
      background-color: white
      .button
        width: 50%
        text-align: center
        height: 100%
        padding: 6px 0px
        &:hover
          color: #333333
        &:first-child
          border-right: 1px solid #eeeeee


.st-file-uploader
  border: 1px dashed #dddddd
  float: left
  width: 100%
  rounded(5px)
  .st-file-uploader-placeholder
    font-size: 1.2em
    color: #cccccc
    float: left
    width: 100%
    text-align: center
    padding: 10px
    cursor: pointer
  .st-file-uploader-files
    width: 100%
    padding-left: 10px
    .st-file-uploader-file
      margin: 0px 0px 10px 0px
      margin-right: 10px
      width: 151px
      height: 100px
      position: relative
      overflow: hidden
      input[type=file]
        display : none
      .icon
        width: 100%
        height: 100%
        background-position: center center
        background-size: cover
        background-color: #eeeeee
        rounded(3px)
      .buttons
        display: none
        height: 30px
        background-color: #ffffff
        border: 1px solid #eeeeee
        position: absolute
        bottom: 0
        width: 100%
        -border-radius('','',3px,3px)
        .button
          cursor: pointer
          color: #666666
          font-size: 14px
          padding: 6px
          text-align: center
          width: 50%
          border-left: 1px solid #eeeeee
          &:hover
            color: #333333
          &:first-child
            border: none
          &.delete:before
            content: '\f1f8'
          &.change-visibility:before
            content: '\f06e'
      &.invisible
        .icon
          opacity: 0.2
        .button.change-visibility:before
            content: '\f070'


